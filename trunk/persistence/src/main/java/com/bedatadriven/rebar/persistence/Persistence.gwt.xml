<module rename-to='jdbc'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Inherit the javax.persistence sources -->
    <inherits name="com.bedatadriven.rebar.persistence.emul.Emulation"/>

    <!-- Inherit GEARs and our Jdbc wrapper, this implementation is built on both -->
    <inherits name="com.google.gwt.gears.Gears"/>
    <inherits name="com.bedatadriven.rebar.sql.Sql"/>

    <generate-with class="com.bedatadriven.rebar.persistence.rebind.PersistenceUnitGenerator">
        <when-type-assignable class="com.bedatadriven.rebar.persistence.client.PersistenceUnit"/>
    </generate-with>

    <source path='client'/>
    <source path="util"/>
</module>
